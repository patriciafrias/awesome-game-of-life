{% extends '::base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }
        body * {
            box-sizing: border-box;
        }
        a {
            display: block;
            text-decoration: none;
        }

        .container {
            margin-left: auto;
            margin-right: auto;
            padding-bottom: 40px;
            padding-top: 40px;
            text-align: center;
            width: 800px;
        }

        .board-container {
            background-color: inherit;
        }
        table {
            background-color: #000;
            border: none;
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
        }
        table td {
            border: none;
            border-collapse: collapse;
            box-sizing: border-box;
            color: #FFFFFF;
            font-size: 8px;
            width: 8px;
            height: 8px;
            min-width: 8px;
            min-height: 8px;
        }
        table td .cell {
            display: block;
            height: 100%;
        }
        table td .active-cell {
            background-color: #2ca02c;
        }
        table td .inactive-cell {
            background-color: transparent;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="board-container container">
        <h1>Awesome Game of Life</h1>
        <table>
            <tbody>
            {% if content.data %}
                {% for row in content.data %}
                    <tr>
                        {% for column in row %}
                            <td>
                                {% if column == 1 %}
                                    {% set cssClass = 'active' %}
                                {% else %}
                                    {% set cssClass = 'inactive' %}
                                {% endif %}
                                <span class="cell {{ cssClass }}-cell"></span>
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            {% else %}
                Error. Content not found.
            {% endif %}

            </tbody>
        </table>
    </div>

    {% javascripts '@GOLClientBundle/Resources/public/js/*' %}
    <script>
        setInterval(function () {
                window.location = '/app_dev.php/';
        }, 7000);
    </script>
    {% endjavascripts %}
{% endblock %}
